- content_for(:title, t('.title'))
div
  div
    div
      h1
        = t('.title')
      table
        tr
          th
            = User.human_attribute_name(:name)
          td
            = current_user.name
        tr
          th
            = User.human_attribute_name(:email)
          td
            = current_user.email
      ul
        li
          = link_to t('defaults.edit'), edit_profile_path
        li
          = link_to t('defaults.user_delete'),  profile_path, data: { turbo_method: :delete, turbo_confirm: t('defaults.user_delete_confirmation') }
